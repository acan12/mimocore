require 'rubygems'
source 'http://gemcutter.org' 

## gem core of rails  version=3.2.8
gem 'rails', '3.2.8'           

## core backend skeleton
gem "bson_ext" 
gem "mongoid" , '2.4.12' 
gem "rails3-generators"                  
gem "sunspot_rails"
gem "rack-cors", "~> 0.2.7"
gem 'devise', '2.1.2'

## chat feature
gem "pusher", "0.9.2"

## oauth 2.0 version dependencies
gem "oauth-plugin", "0.4.0"
gem "doorkeeper", '~> 0.6.2'

## template engine , api template json
gem "rabl"   
gem "slim", "1.2.2"

## upload image
gem "carrierwave", "0.5.8"
gem 'carrierwave-mongoid', :require => 'carrierwave/mongoid'

## this is an optional packaged Solr:
group  :test, :development do
	gem "sunspot_solr" , '1.3.0'
	gem "rspec"
	gem "selenium-webdriver"
end                          
